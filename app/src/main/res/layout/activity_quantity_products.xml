<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.QuantityProductsActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <TextView
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona la cantidad de producto que deseas:"
            />
        <TextView
            android:textSize="18sp"
            android:id="@+id/textview_model_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model"
            />
        <Spinner
            android:textSize="18sp"
            android:id="@+id/spinner_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio: $"
            android:textSize="18sp"
            />
        <TextView
            android:textSize="18sp"
            android:id="@+id/textview_price_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="precio"
            />
</LinearLayout>
        <LinearLayout
            android:textSize="18sp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Importe: $"
                />
            <TextView
                android:textSize="18sp"
                android:id="@+id/textview_amount_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="precio"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_accept_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accept"
                />
            <Button
                android:text="@string/cancel"
                android:id="@+id/button_cancel_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>